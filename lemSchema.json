{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "lem": {
      "type": "object",
      "properties": {
        "startIDs": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        },
        "stopIDs": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        },
        "building_blocks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "block_type": {
                "type": "string",
                "enum": ["Information", "Dialogue", "Feedback", "Practice", "Evidence"]
              },
              "description": {
                "type": "string"
              },
              "method": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "block_type",
              "method"
            ]
          }
        },
        "contexts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "context_type": {
                "type": "string",
                "enum": ["Classroom", "Online Synchronous", "Online Asynchronous", "Experiential"]
              },
              "building_blocks": {
                "type": "array",
                "items": {
                  "type": "integer"
                }
              },
              "actions": {
                "type": "array",
                "items": {
                  "type": "integer"
                }
              },
              "notations": {
                "type": "array",
                "items": {
                  "type": "integer"
                }
              }
            },
            "required": [
              "id",
              "context_type"
            ]
          }
        },
        "actions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "action_type": {
                "type": "string",
                "enum": ["Learner Action", "Facilitator Action", "System Action"]
              },
              "source": {
                "type": "integer"
              },
              "target": {
                "type": "integer"
              },
              "description": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "action_type",
              "source",
              "target"
            ]
          }
        },
        "notations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "building_block": {
                "type": "integer"
              },
              "description": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "building_block",
              "description"
            ]
          }
        }
      },
      "required": [
        "building_blocks",
        "contexts",
        "actions",
        "notations"
      ]
    }
  },
  "required": [
    "lem"
  ]
}
